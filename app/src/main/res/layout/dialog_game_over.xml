<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Título (Vitória/Derrota) -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VOCÊ VENCEU!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <!-- Mensagem (Score/Tempo) -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Score: 1000\nTempo: 10s"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#666666"/>

        <!-- RANKING (Faltava este bloco aqui) -->
        <TextView
            android:id="@+id/tvHighScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:text="Carregando Ranking..."
            android:textAlignment="center"
            android:textColor="#444"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Botão Reiniciar -->
        <Button
            android:id="@+id/btnRestart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Jogar Novamente"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
